{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "paths": {
      "@assets/*": [
        "./public/assets/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@core/*": [
        "./src/core/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "react-admin/index.jsx",
    "./src",
    "./setupTests.ts",
    "./jest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}